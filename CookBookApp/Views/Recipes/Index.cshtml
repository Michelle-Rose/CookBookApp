@model CookBookApp.Models.ViewModels.RecipesIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Recipes</h1>

<ul class="nav nav-pills">
    <li class="nav-item">
        <a asp-action="Index" asp-controller="Recipes" asp-route-category="recentlyAdded" class="nav-link">Recently Added</a>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Categories</a>
        <div class="dropdown-menu">
            @foreach (var category in @Model.Categories)
            {
                <a asp-action="Index" asp-controller="Recipes" asp-route-category="@category.Name" class="dropdown-item">@category.Name</a>
            }
        </div>
    </li>
    <li class="nav-item">
        @* TODO Link this a to list most popular recipes*@
        <a asp-action="Index" asp-controller="Recipes" asp-route-category="recentlyAdded" class="nav-link">Most Popular</a>
    </li>
</ul>


<div class="container mt-3">
    <div class="row">
        <div class="card-deck">
            @foreach (var recipe in Model.Recipes)
            {
                <div class="card mb-4" style="min-width: 18rem; max-width: 18rem;">
                    <img class="card-img-top" src="https://placehold.it/280x140/abc" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <p class="card-text">This is a longer card supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                        <button class="btn btn-primary" name="@recipe.Id">Details</button>
                    </div>
                    <div class="card-footer">
                        <p class="card-text"><small class="text-muted">Added @recipe.CreatedAt</small></p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
