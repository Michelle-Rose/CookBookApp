<div class="container-fluid">
    <h1>Manage Categories</h1>
    <br />
    <div class="row">
        <div class="form-group col-md-9">
            <input id="name" class="form-control" placeholder="Add new category" />
        </div>
        <div class="form-group col-md-3">
            <button id="btnAdd" class="btn btn-primary">Add category</button>
        </div>
    </div>

    <br />
    <table id="categoriesTable" class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr></tr>
        </tbody>
    </table>
</div>

@section Scripts {

    <script>

        $(document).ready(function () {
            var table = $('#categoriesTable').DataTable({
                ajax: { url: "/api/categories", dataSrc: "" },
                "columns": [
                    { "data": "id" },
                    { "data": "name" },
                    {
                        "data": "id",
                        "render": function (data) {
                            return "<button class='btn btn-link' data-category-id='" + data + "'>Edit</button>";
                        }
                    }
                ]
            });

            $("#categoriesTable").on("click", ".js-delete", function () {
                var button = $(this);

                alert("Do you want to delete this category?");
                $.ajax({
                    url: "/api/categories/" + button.attr("data-category-id"),
                    method: "DELETE",
                    success: function () {
                        table.row(button.parents("tr")).remove().draw();
                    }
                });
            })

            $("#btnAdd").click(function () {
                var name = $("#name").val();
                alert("clicked");

                $.ajax({
                    url: "/api/categories/",
                    method: "POST",
                    data: { Name: name },
                    success: function (data) {
                        table.rows.add([data]);
                        table.draw();
                    }
                });
            });
        });
    </script>
}
